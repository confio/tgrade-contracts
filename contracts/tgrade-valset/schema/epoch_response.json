{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EpochResponse",
  "type": "object",
  "required": [
    "current_epoch",
    "epoch_length",
    "last_update_height",
    "last_update_time",
    "next_update_time"
  ],
  "properties": {
    "current_epoch": {
      "description": "The current epoch # (env.block.time/epoch_length, rounding down)",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "epoch_length": {
      "description": "Number of seconds in one epoch. We update the Tendermint validator set only once per epoch.",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "last_update_height": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "last_update_time": {
      "description": "The last time we updated the validator set - block time and height",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "next_update_time": {
      "description": "Seconds (UTC UNIX time) of next timestamp that will trigger a validator recalculation",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    }
  }
}
