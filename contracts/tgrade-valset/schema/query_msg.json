{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "anyOf": [
    {
      "description": "Returns ConfigResponse - static contract data",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns EpochResponse - get info on current and next epochs",
      "type": "object",
      "required": [
        "epoch"
      ],
      "properties": {
        "epoch": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the validator key (if present) for the given operator",
      "type": "object",
      "required": [
        "validator"
      ],
      "properties": {
        "validator": {
          "type": "object",
          "required": [
            "operator"
          ],
          "properties": {
            "operator": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Paginate over all operators, using operator address as pagination",
      "type": "object",
      "required": [
        "list_validators"
      ],
      "properties": {
        "list_validators": {
          "type": "object",
          "properties": {
            "limit": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0.0
            },
            "start_after": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "List the current validator set, sorted by power descending (no pagination - reasonable limit from max_validators)",
      "type": "object",
      "required": [
        "list_active_validators"
      ],
      "properties": {
        "list_active_validators": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "description": "This will calculate who the new validators would be if we recalculated endblock right now. Also returns ListActiveValidatorsResponse",
      "type": "object",
      "required": [
        "simulate_active_validators"
      ],
      "properties": {
        "simulate_active_validators": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  ]
}
