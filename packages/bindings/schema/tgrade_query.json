{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TgradeQuery",
  "anyOf": [
    {
      "description": "Returns the current tendermint validator set, along with their voting status from last block",
      "type": "object",
      "required": [
        "validator_votes"
      ],
      "properties": {
        "validator_votes": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Lists all contracts registered with the given hook type Returns ListHooksResponse",
      "type": "object",
      "required": [
        "list_hooks"
      ],
      "properties": {
        "list_hooks": {
          "$ref": "#/definitions/HookType"
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "HookType": {
      "type": "string",
      "enum": [
        "begin_block",
        "end_block",
        "validator_set_update",
        "gov_proposal_executor",
        "sudoer",
        "token_minter",
        "consensus_param_changer"
      ]
    }
  }
}
